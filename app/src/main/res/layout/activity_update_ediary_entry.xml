<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateEntryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Update Entry"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />

        <EditText
            android:id="@+id/edit_text_attr_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Attribute 1" />

        <EditText
            android:id="@+id/edit_text_attr_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Attribute 2" />

        <EditText
            android:id="@+id/edit_text_attr_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Attribute 3" />

        <CheckBox
            android:id="@+id/checkbox_attr_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attribute 4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/button_update"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_blue"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="@color/colorLight"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/button_delete"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_red"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/colorLight"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>